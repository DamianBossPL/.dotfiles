# --- Services --- #
# Clipboard persistence
exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store
exec wl-clip-persist --clipboard regular

exec wal -R
exec swayidle
exec waybar
exec mako
exec thunar --daemon
exec ~/.config/sway/usb_detect
exec /usr/bin/wayvnc 0.0.0.0 5900
exec gamemoded
# Autostart .desktop files
exec dex --autostart --environment WAYLAND_DISPLAY="$WAYLAND_DISPLAY"
exec obs --minimize-to-tray --startreplaybuffer 

# Boot sound
exec canberra-gtk-play -i desktop-login