{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "control-center-margin-top": 5,
  "control-center-margin-bottom": 5,
  "control-center-margin-right": 5,
  "control-center-margin-left": 0,
  "notification-inline-replies": true,
  "control-center-width": 450,
  "notification-window-width": 400,
  "notification-grouping": false,
  "transition-time": 0,
  "hide-on-action": false,
  "timeout-low": 4,
  "timeout": 8,
  "widget-config": {
    "inhibitors": {
      "clear-all-button": false
    }
  },
  "script-fail-notify": false,
  "scripts": {
    "notification-sound-by-name": {
      "exec": "[[ $(swaync-client -D) == 'false' ]] && canberra-gtk-play -i \"$SWAYNC_SOUND_NAME\"",
      "run-on": "receive",
      "sound-name": ".*"
    },
    "notification-sound-by-file": {
      "exec": "[[ $(swaync-client -D) == 'false' ]] && canberra-gtk-play -f \"$SWAYNC_SOUND_FILE\"",
      "run-on": "receive",
      "sound-file": ".*"
    },
    "notification-sound-low": {
      "exec": "[[ $(swaync-client -D) == 'false' ]] && canberra-gtk-play -i message",
      "run-on": "receive",
      "urgency": "Low",
      "app-name": "^(?!discord|spotify|vesktop).*$"
    },
    "notification-sound-normal": {
      "exec": "[[ $(swaync-client -D) == 'false' ]] && canberra-gtk-play -i message-new-instant",
      "run-on": "receive",
      "urgency": "Normal",
      "app-name": "^(?!discord|spotify|vesktop).*$"
    },
    "notification-sound-critical": {
      "exec": "[[ $(swaync-client -D) == 'false' ]] && canberra-gtk-play -i dialog-error",
      "run-on": "receive",
      "urgency": "Critical",
      "app-name": "^(?!discord|spotify|vesktop).*$"
    }
  }
}
